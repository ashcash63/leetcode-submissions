class Solution:
    def mergeAlternately(self, word1: str, word2: str) -> str:
        res = ""
        count =1
        for char1, char2 in zip(word1, word2):
            res += char1
            res += char2
            count +=1
        if len(word1) > len(word2):
            res += word1[count-1: ]
        if len(word2) > len(word1):   
            res += word2[count-1: ]
        return res
            
